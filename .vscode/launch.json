{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend (Flask)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/app.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            }
        },
        {
            "name": "Frontend (Streamlit)",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/frontend/streamlit_app.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Test Evaluation",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test_evaluation.py",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "Full App (Backend + Frontend)",
            "configurations": [
                "Backend (Flask)",
                "Frontend (Streamlit)"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            }
        }
    ]
}
