{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Backend",
            "type": "shell",
            "command": "python",
            "args": [
                "backend/app.py"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "group": "backend"
            },
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Run Frontend",
            "type": "shell",
            "command": "streamlit",
            "args": [
                "run",
                "frontend/streamlit_app.py"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "group": "frontend"
            },
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Run Full App",
            "dependsOn": [
                "Run Backend",
                "Run Frontend"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "python",
            "args": [
                "test_evaluation.py"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "pip",
            "args": [
                "install",
                "-r",
                "requirements_updated.txt"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}
